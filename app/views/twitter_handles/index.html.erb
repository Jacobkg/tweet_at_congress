<%= form_tag("/twitter_handles", :method => "post", :class => "form-signin") do %>
  <h2 class="form-signin-heading">Tweet My Rep</h2>
  <%= text_field_tag(:zip_code, "", :class => "input-block-level", :placeholder => "Zip code...", :autofocus => true) %>
  <%= hidden_field_tag(:default_tweet_text, params[:text]) %>
  <%= submit_tag("Find my representative", :class => "btn btn-large btn-primary") %>
<% end %>

<script type="text/javascript">
    mixpanel.track_forms(".form-signin", "Searched For Rep");
</script>